<div class="flex items-center justify-center mb-2">
  <%= button_to "Create a new room", new_admin_room_path, method: :get, class:"rounded-md border border-transparent bg-indigo-600 py-3 px-8 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"%>
</div>
<div class="overflow-x-auto relative pt-2 shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="py-3 px-6">
        Room name
      </th>
      <th scope="col" class="py-3 px-6">
        id
      </th>
      <th scope="col" class="py-3 px-6">
        Created at
      </th>
      <th scope="col" class="py-3 px-6">
        Updated at
      </th>
      <th scope="col" class="py-3 px-6">
        <span class="sr-only">Edit</span>
      </th>
      <th scope="col" class="py-3 px-6">
        <span class="sr-only">Delete</span>
      </th>
    </tr>
    </thead>
    <tbody>
    <% @admin_rooms.each do |room| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
        <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
          <%= room.name %>
        </th>
        <td class="py-4 px-6">
          <%= room.id %>
        </td>
        <td class="py-4 px-6">
          <%= room.created_at %>
        </td>
        <td class="py-4 px-6">
          <%= room.updated_at %>
        </td>
        <td class="py-4 px-6 text-right">
          <%= button_to "Edit", edit_admin_room_path(room), method: :get, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline"%>
        </td>
        <td class="py-4 px-6 text-right">
          <%= button_to "Delete", admin_room_path(room), method: :delete, class:"font-medium text-blue-600 dark:text-blue-500 hover:underline"%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>