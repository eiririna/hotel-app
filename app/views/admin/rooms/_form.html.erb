<%= form_with(model: @admin_room, html: { multipart: true }) do |f| %>
  <form action="#" class="space-y-8">
    <div>
      <%= f.label :name, "Room name", class:"block my-3 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= f.text_field :name, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"%>
    </div>
    <div>
      <%= f.label :price, "Price", class:"block my-3 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= f.number_field :price, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"%>
    </div>
    <div class="sm:col-span-2">
      <%= f.label :description, "Description", class:"block my-3 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= f.text_area :description, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light"%>
    </div>
    <div class="mt-3">
      <%= f.label :images, "Upload images", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"%>
      <%= f.file_field :images, :multiple => true, direct_upload: 'false', class: "block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
    </div>
    <button type="submit" class="mt-10 flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 py-3 px-8 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
      <%= f.submit "Submit" %>
    </button>
  </form>
<% end %>