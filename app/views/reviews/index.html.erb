<%= render 'form' %>>

<section class="py-10 2xl:py-24 bg-blueGray-100 rounded-t-10xl overflow-hidden">
  <div class="flex justify-center">
    <a class="mb-14 text-3xl font-heading font-medium underline hover:text-darkBlueGray-700" href="#"><%=Review.where(:published => true).count%> reviews</a>
  </div>
    <% @reviews.each do |review| %>
    <div class="container px-4 py-2 mx-auto">
    <div class="mb-2 shadow-lg rounded-t-8xl rounded-b-5xl overflow-hidden">
          <div class="pt-3 pb-3 md:pb-1 md:px-16 bg-white bg-opacity-40">
            <div class="flex flex-wrap items-center">
              <h4 class="w-full md:w-auto text-xl font-heading font-medium"><%= review.user.full_name %></h4>
              <div class="w-full md:w-px h-2 md:h-8 mx-8 bg-transparent md:bg-gray-200"></div>
              <span class="text-xl font-heading font-medium"><%= review.rating %></span>
            </div>
          </div>
          <div class="px-4 overflow-hidden md:px-16 pt-8 pb-12 bg-white">
            <div class="flex flex-wrap">
                <div class="w-full md:w-2/3 mb-6 md:mb-0">
                  <h5 class="font-semibold mb-8 max-w-2xl text-darkBlueGray-400 leading-loose"><%= review.title %></h5>
                  <p class="mb-8 max-w-2xl text-darkBlueGray-400 leading-loose"><%= review.body %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</section>